
\begin{definition}
    Un \emph{espacio métrico} es un par $(X, d)$, donde $X$ es un conjunto y $d: X \times X \to \mathbb{R}_{\geq 0}$ una función llamada \emph{distancia} (o \emph{métrica}), que satisface las siguientes propiedades para todo $x, y, z \in X$:
    \begin{enumerate}
        \item \textbf{Simetría}: $d(x, y) = d(y, x)$.
        \item \textbf{Desigualdad triangular}: $d(x, z) \le d(x, y) + d(y, z)$.
        \item \textbf{Identidad de los indiscernibles}: $d(x, y) = 0$ si y sólo si $x = y$.
    \end{enumerate}
\end{definition}

\begin{remark}
Una función $d: X \times X \to \mathbb{R}_{\geq 0}$ es una \emph{pseudo-métrica} si cumple la simetría, la desigualdad triangular y además cumple:
$$
    x=y \implies d(x, y) = 0.
$$
Nótese que $d(x,y)=0$ no implica necesariamente $x=y$ en una pseudo-métrica. Podemos usar una pseudo-métrica para formar una métrica (usualmente definiendo una relación de equivalencia $x \sim y$ si y sólo si $d(x,y)=0$ y considerando el espacio cociente).
\end{remark}

\begin{definition}
Sea $(X, d)$ un espacio métrico.
\begin{itemize}
    \item Para $Y \subset X$, el \emph{diámetro} de $Y$ es $\operatorname{diam}(Y) = \sup \{d(x, y) \mid x, y \in Y\}$ (si $Y = \emptyset$, $\operatorname{diam}(Y)=0$; si el supremo no existe, $\operatorname{diam}(Y)=\infty$).
    \item Un conjunto $Y \subset X$ es \emph{acotado} si $\operatorname{diam}(Y) < \infty$.
\end{itemize}
\end{definition}

\begin{definition}
Sea $(X, d)$ un espacio métrico, $x \in X$ y $\varepsilon > 0$.
\begin{itemize}
    \item La \emph{bola abierta} de centro $x$ y radio $\varepsilon$ es $B(x, \varepsilon) = \{y \in X \mid d(x, y) < \varepsilon \}$.
    \item La \emph{bola cerrada} de centro $x$ y radio $\varepsilon$ es $\bar{B}(x, \varepsilon) = \{y \in X \mid d(x, y) \le \varepsilon \}$.
\end{itemize}
\end{definition}

\begin{definition}
Sea $A \subset X$ en un espacio métrico $(X, d)$.
\begin{itemize}
    \item El \emph{interior} de $A$ es $A^{\circ} = \{x \in A \mid \exists \varepsilon > 0 \text{ tal que } B(x, \varepsilon) \subset A\}$. Es el mayor conjunto abierto contenido en $A$.
    \item $A$ es \emph{abierto} si $A = A^{\circ}$ (equivalentemente, si para todo $x \in A$, existe $\varepsilon > 0$ tal que $B(x, \varepsilon) \subset A$).
    \item La \emph{clausura} (o \emph{adherencia}) de $A$ es $\bar{A} = \{x \in X \mid \forall \varepsilon > 0, B(x, \varepsilon) \cap A \neq \emptyset \}$. Es el menor conjunto cerrado que contiene a $A$.
    \item $A$ es \emph{cerrado} si $A = \bar{A}$ (equivalentemente, si su complemento $X \setminus A$ es abierto).
\end{itemize}
\end{definition}

\begin{remark}
En un espacio métrico $(X,d)$:
\begin{itemize}
    \item La bola abierta $B(x, \varepsilon)$ es siempre un conjunto abierto.
    \item La bola cerrada $\bar{B}(x, \varepsilon)$ es siempre un conjunto cerrado.
    \item En general, $\overline{B(x, \varepsilon)} \subseteq \bar{B}(x, \varepsilon)$, pero la igualdad no siempre se cumple (la clausura de la bola abierta puede ser estrictamente más pequeña que la bola cerrada).
\end{itemize}
\end{remark}

\subsection{Sucesiones convergentes}

\begin{definition}
Sea $(x_n)_{n \in \mathbb{N}}$ una sucesión en $(X, d)$. Decimos que $(x_n)$ \emph{converge} a $x \in X$, y escribimos $x_n \to x$ o $\lim_{n \to \infty} x_n = x$, si $\lim_{n \to \infty} d(x_n, x) = 0$.
Es decir, 
\begin{center}
    Para todo $\varepsilon > 0$, existe un $n_{0} \in \mathbb{N}$ tal que si $n \geq n_{0}$ entonces $d(x_{n}, x) < \varepsilon$.
\end{center}
\end{definition}

\begin{proposition}
Si una sucesión $(x_n)_{n \in \mathbb{N}}$ en un espacio métrico $(X, d)$ converge, su límite es único. Es decir, si $x_n \to x$ y $x_n \to y$, entonces $x=y$.
\end{proposition}

\begin{proof}
Supongamos $x_n \to x$ y $x_n \to y$. Sea $\varepsilon > 0$. Existe $n_1$ tal que $d(x_n, x) < \varepsilon/2$ para $n \ge n_1$, y existe $n_2$ tal que $d(x_n, y) < \varepsilon/2$ para $n \ge n_2$. Sea $n_0 = \max(n_1, n_2)$. Para $n \ge n_0$, por la desigualdad triangular:
\[ 0 \le d(x, y) \le d(x, x_n) + d(x_n, y) < \frac{\varepsilon}{2} + \frac{\varepsilon}{2} = \varepsilon. \]
Como $d(x, y) < \varepsilon$ para todo $\varepsilon > 0$, necesariamente $d(x, y) = 0$. Por la propiedad (3) de la métrica, esto implica $x=y$.
\end{proof}

\begin{definition}
Una sucesión $(x_n)_{n \in \mathbb{N}}$ en $(X, d)$ es una \emph{sucesión de Cauchy} si para todo $\varepsilon > 0$, existe $n_0 \in \mathbb{N}$ tal que $d(x_n, x_m) < \varepsilon$ para todo $n, m \ge n_0$.
\end{definition}

\begin{proposition}
Toda sucesión convergente en un espacio métrico es una sucesión de Cauchy.
\end{proposition}

\begin{proof}
Supongamos que $x_n \to x$. Sea $\varepsilon > 0$. Por definición de convergencia, existe $n_0 \in \mathbb{N}$ tal que $d(x_k, x) < \varepsilon/2$ para todo $k \ge n_0$.
Entonces, para $n, m \ge n_0$, usamos la desigualdad triangular:
\[
    d(x_n, x_m) \le d(x_n, x) + d(x, x_m) < \frac{\varepsilon}{2} + \frac{\varepsilon}{2} = \varepsilon.
\]
Por lo tanto, $(x_n)$ es una sucesión de Cauchy.
\end{proof}

\begin{remark}
Sea $(X, d)$ un espacio métrico. Entonces:
\begin{itemize}
    \item \textbf{Desigualdad triangular iterada}: $d(x_1, x_n) \le d(x_1, x_2) + d(x_2, x_3) + \dots + d(x_{n-1}, x_n)$.
    \item \textbf{Desigualdad triangular inversa}: $|d(x, z) - d(y, z)| \le d(x, y)$ para todo $x, y, z \in X$. Esto muestra que la función $x \mapsto d(x, z)$ (para $z$ fijo) es Lipschitz continua (con constante 1).
\end{itemize}
\end{remark}

\begin{example}
El par $(\mathbb{R}^n, d)$ con $d(x, y) = \|x - y\|_2 = \sqrt{\sum_{i=1}^n (x_i - y_i)^2}$ (la métrica euclídea) es un espacio métrico. 
\end{example}

\begin{example}
Para cualquier conjunto $X$, la \emph{métrica discreta} está definida por $d(x, y) = \delta_{xy} = \begin{cases} 0 & \text{si } x = y \\ 1 & \text{si } x \neq y \end{cases}$.
\end{example}

\begin{example}
Si $(X, d)$ es un espacio métrico, entonces $d'(x, y) = \min(d(x, y), 1)$ también es una métrica en $X$, llamada métrica acotada equivalente.
\end{example}

\begin{example}
Si $(V, \langle \cdot, \cdot \rangle)$ es un espacio vectorial con producto interno (sobre $\mathbb{R}$ o $\mathbb{C}$), entonces $\|x\| = \sqrt{\langle x, x \rangle}$ es una norma, y $d(x, y) = \|x - y\|$ es una métrica inducida por la norma.
\end{example}

\begin{example}
El espacio $C([a, b], \mathbb{R})$ de funciones continuas $f: [a, b] \to \mathbb{R}$. Se pueden definir varias métricas, por ejemplo, a partir de normas:
\begin{itemize}
    \item La norma $L^2$: $\|f\|_2 = \left( \int_a^b |f(x)|^2 dx \right)^{1/2}$. El producto interno asociado es $\langle f, g \rangle = \int_a^b f(x) \overline{g} (x) dx$.
    \item La norma del supremo (o uniforme): $\|f\|_{\infty} = \sup_{x \in [a,b]} |f(x)|$.
\end{itemize}
La métrica correspondiente es $d(f, g) = \|f - g\|$.
\end{example}

\begin{example}
Para $p \in [1, \infty)$, el espacio $l^p(\mathbb{C})$ (o $l^p(\mathbb{R})$) es el conjunto de sucesiones $a = (a_n)_{n \in \mathbb{N}}$ de números complejos (o reales) tales que la serie $\sum_{n=1}^{\infty} |a_n|^p$ converge. La norma está dada por
\[
\|a\|_p = \left( \sum_{n=1}^{\infty} |a_n|^p \right)^{1/p}.
\]

El espacio $l^{\infty}(\mathbb{C})$ (o $l^{\infty}(\mathbb{R})$) es el conjunto de sucesiones acotadas $a = (a_n)_{n \in \mathbb{N}}$, es decir,
\[
\sup_{n \in \mathbb{N}} |a_n| < \infty.
\]
La norma en este caso es
\[
\|a\|_{\infty} = \sup_{n \in \mathbb{N}} |a_n|.
\]

Estos son espacios vectoriales normados, y por lo tanto, espacios métricos con la distancia inducida $d(a, b) = \|a - b\|_p$ (o $d(a, b) = \|a - b\|_{\infty}$).
\end{example}

\begin{definition}
Un subconjunto $V \subseteq X$ es un \emph{entorno} de un punto $x \in X$ si existe $\varepsilon > 0$ tal que la bola abierta $B(x, \varepsilon)$ está contenida en $V$, es decir, $B(x, \varepsilon) \subset V$.
Si $V$ es un entorno de $x$, decimos que $x$ es un \emph{punto interior} de $V$. (El conjunto de puntos interiores de $V$ es $V^{\circ}$).
\end{definition}

\begin{remark}
Una sucesión $(x_n)$ en $(X,d)$ es de Cauchy si y sólo si cumple alguna de las siguientes condiciones equivalentes:
\begin{itemize}
    \item $\forall \varepsilon > 0, \exists n_0 \in \mathbb{N}$ tal que $d(x_n, x_m) < \varepsilon$ para todo $n, m \ge n_0$. (Definición original)
    \item $\lim_{n_0 \to \infty} \left( \sup_{k \ge n_0} d(x_k, x_{n_0}) \right) = 0$.
    \item $\lim_{n \to \infty} \left( \sup_{k, l \ge n} d(x_k, x_l) \right) = 0$. (El término $\sup_{k, l \ge n} d(x_k, x_l)$ es el diámetro del conjunto $\{x_k \mid k \ge n\}$).
\end{itemize}
\end{remark}

\begin{example}
Sea $X = \mathbb{R} \setminus \{0\}$ con la métrica usual $d(x, y) = |x - y|$. La sucesión $x_n = 1/n$ es de Cauchy en $X$, ya que es de Cauchy en $\mathbb{R}$ y $d_X(x_n, x_m) = d_{\mathbb{R}}(x_n, x_m)$. Sin embargo, $(x_n)$ no converge en $X$, ya que su límite en $\mathbb{R}$ es $0$, y $0 \notin X$. Esto muestra que $X = \mathbb{R} \setminus \{0\}$ no es un espacio métrico completo.
\end{example}

\begin{definition}
Un espacio métrico $(X, d)$ se dice \emph{completo} si toda sucesión de Cauchy en $X$ converge a un punto en $X$.
\end{definition}

\begin{remark}
Consideremos $(X, d_{discreto})$ donde $d_{discreto}$ es la métrica discreta. Una sucesión $(x_n)$ es de Cauchy si y sólo si es \emph{eventualmente constante}, es decir, existe $n_0 \in \mathbb{N}$ tal que $x_n = x_{n_0}$ para todo $n \ge n_0$.
Toda sucesión eventualmente constante converge (a ese valor constante $x_{n_0}$).
Por lo tanto, $(X, d_{discreto})$ es siempre un espacio métrico completo, independientemente del conjunto $X$.
\end{remark}

\begin{definition}
Sea $A \subset X$ en un espacio métrico $(X, d)$.
\begin{itemize}
    \item El \emph{exterior} de $A$ es el interior del complemento de $A$: $\text{ext}(A) = (X \setminus A)^{\circ}$. Son los puntos que tienen un entorno disjunto de $A$.
    \item La \emph{frontera} de $A$ (también llamada \emph{borde}) es el conjunto $\partial A = \{x \in X \mid \forall \varepsilon > 0, B(x, \varepsilon) \cap A \neq \emptyset \text{ y } B(x, \varepsilon) \cap (X \setminus A) \neq \emptyset \}$. Son los puntos tales que todo entorno de ellos intersecta tanto a $A$ como a su complemento.
    \item Se cumple que $\partial A = \bar{A} \setminus A^{\circ} = \bar{A} \cap \overline{X \setminus A}$. Además, $X$ es la unión disjunta de $A^{\circ}$, $\partial A$ y $\text{ext}(A)$.
\end{itemize}
\end{definition}

\begin{definition}
Sea $(X, d)$ un espacio métrico, $x \in X$ y $A \subseteq X$ un subconjunto no vacío. La \emph{distancia de $x$ al conjunto $A$} se define como:
\[ d(x, A) = \inf \{d(x, a) \mid a \in A\}. \]
\end{definition}

\begin{remark}
Sea $A \subseteq X$ no vacío. La función $f: X \to \mathbb{R}$ definida por $f(x) = d(x, A)$ es Lipschitz continua con constante 1. En efecto, por la desigualdad triangular inversa aplicada a $d(x,a)$ y $d(y,a)$, y tomando ínfimos, se obtiene:
\[ |d(x, A) - d(y, A)| \le d(x, y) \quad \forall x, y \in X. \]
Como consecuencia, la función $x \mapsto d(x,A)$ es uniformemente continua. Además, $d(x, A) = 0 \iff x \in \bar{A}$.
\end{remark}